<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ProductViewerApp.MainPage"
    Title="Product Viewer">

    <CollectionView x:Name="ProductList">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                        <Label Text="{Binding Category}" FontSize="14" TextColor="Gray"/>
                        <Label Text="{Binding Price, StringFormat='Giá: {0:C}'}" FontSize="14" TextColor="Green"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
